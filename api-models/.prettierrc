{
  "printWidth": 100,
  "singleQuote": true,
  "arrowParens": "always",
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "**/*.{ts,tsx,js,jsx}",
      "options": {
        "parser": "typescript"
      }
    } 
  ]
}
